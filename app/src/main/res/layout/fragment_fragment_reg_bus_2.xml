<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_reg_bus_2">

    <ProgressBar
        android:id="@+id/pas_reg_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginBottom="37dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/pasloginBtn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginEnd="7dp"
        android:text="Send Code"
        app:layout_constraintBottom_toTopOf="@+id/pas_reg_lable"
        app:layout_constraintEnd_toEndOf="@+id/pas_reg_lable"
        app:layout_constraintTop_toBottomOf="@+id/reg_pas_phn" />

    <EditText
        android:id="@+id/reg_pas_phn"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/pasloginBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/pas_reg_lable"
        android:layout_width="114dp"
        android:layout_height="30dp"
        android:text="Verification Code"
        app:layout_constraintBottom_toTopOf="@+id/pas_reg_code"
        app:layout_constraintEnd_toEndOf="@+id/pas_reg_code"
        app:layout_constraintStart_toStartOf="@+id/pas_reg_code"
        app:layout_constraintTop_toBottomOf="@+id/pasloginBtn" />

    <Button
        android:id="@+id/pas_reg_validatebtn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:text="Validate Phone Number"
        app:layout_constraintBottom_toTopOf="@+id/pas_reg_registerBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pas_reg_code" />

    <Button
        android:id="@+id/pas_reg_registerBtn"
        android:layout_width="154dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:background="#03A9F4"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pas_reg_validatebtn" />

    <EditText
        android:id="@+id/pas_reg_code"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/pas_reg_validatebtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pas_reg_lable" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="160dp"
        android:layout_height="188dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="46dp"
        android:src="@drawable/bus_logo"
        app:layout_constraintBottom_toTopOf="@+id/pas_reg_progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:text="Enter Phone Number"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/reg_pas_phn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pas_reg_progressBar" />

</androidx.constraintlayout.widget.ConstraintLayout>