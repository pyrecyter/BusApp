<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ProgressBar
        android:id="@+id/pas_reg_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="101dp"
        android:layout_height="0dp"
        android:layout_marginTop="269dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/reg_pas_phn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pasloginBtn"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="37dp"
        android:backgroundTint="#03A9F4"
        android:backgroundTintMode="multiply"
        android:text="Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/registerBtn"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pas_reg_validatebtn" />

    <EditText
        android:id="@+id/reg_pas_phn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="phone"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/pas_reg_lable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pas_reg_progressBar" />

    <EditText
        android:id="@+id/pas_reg_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="29dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/pas_reg_validatebtn"
        app:layout_constraintStart_toStartOf="@+id/reg_pas_phn"
        app:layout_constraintTop_toBottomOf="@+id/pas_reg_lable" />

    <TextView
        android:id="@+id/pas_reg_lable"
        android:layout_width="120dp"
        android:layout_height="41dp"
        android:layout_marginBottom="19dp"
        android:text="Verification Code"
        app:layout_constraintBottom_toTopOf="@+id/pas_reg_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_pas_phn" />

    <Button
        android:id="@+id/pas_reg_validatebtn"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="17dp"
        android:backgroundTint="#969696"
        android:text="Validate Phone Number"
        app:layout_constraintBottom_toTopOf="@+id/pasloginBtn"
        app:layout_constraintStart_toStartOf="@+id/pasloginBtn"
        app:layout_constraintTop_toBottomOf="@+id/pas_reg_code" />

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_marginEnd="1dp"
        android:backgroundTint="#FF9800"
        android:text="Register"
        app:layout_constraintBaseline_toBaselineOf="@+id/pasloginBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pasloginBtn" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="202dp"
        android:layout_height="315dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bus_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>